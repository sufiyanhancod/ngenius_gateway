<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_card_holder_container"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:visibility="invisible"
    tools:showIn="@layout/view_bottom_sheet">

    <EditText
        android:id="@+id/edit_card_holder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/transparent"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ.-'/"
        android:hint="@string/cardholder_field_hint"
        android:inputType="textCapCharacters|textNoSuggestions"
        android:maxLength="32"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textDirection="locale"
        android:textSize="@dimen/input_text_font_size"
        android:imeOptions="actionDone"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/edit_card_number" />
</FrameLayout>